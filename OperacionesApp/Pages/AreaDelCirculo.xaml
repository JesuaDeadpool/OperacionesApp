<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OperacionesApp.Pages.AreaDelCirculo"
             Title="Area Del Circulo">

    <ScrollView>
    <VerticalStackLayout Spacing="20" Padding="20">

        <Label Text="Ingrese el Radio del circulo " />
            <Entry Keyboard="Numeric" x:Name="txtRadio"/>
        
            <Label Text="Area:"/>
        <Entry IsReadOnly="True" x:Name="txtResultado"/>

            <Button Text="Calcular" Background="Blue" TextColor="White"></Button>
    </VerticalStackLayout>
    </ScrollView>
</ContentPage>